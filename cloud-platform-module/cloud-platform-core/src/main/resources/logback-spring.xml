<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds">
    <!-- 注册 Spring 扩展转换器 -->
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter"/>
    <conversionRule conversionWord="wEx" converterClass="org.springframework.boot.logging.logback.WhitespaceThrowableProxyConverter"/>

    <!-- 关键修改：通过Spring环境变量获取应用名，确保跨模块生效 -->
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="app"/>

    <!-- 日志基础配置 -->
    <property name="LOG_BASE_DIR" value="./"/> <!-- 当前工作目录 -->
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n"/>
    <property name="LOG_FILE_NAME" value="${APP_NAME}"/> <!-- 日志文件名，默认app -->
    <property name="LOG_BASE_DIR" value="${LOG_PATH:-logs}"/> <!-- 日志根目录 -->

    <!-- 日志文件存储路径 -->
    <property name="LOG_FILE_PATH" value="${LOG_BASE_DIR}/${LOG_FILE_NAME}"/>

    <!-- 1. 控制台日志（复用Spring Boot默认控制台配置） -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <!-- 使用Spring Boot默认的控制台日志格式 -->
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${CONSOLE_LOG_PATTERN:-%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr(${PID:- }){magenta} %clr(---){faint} %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>


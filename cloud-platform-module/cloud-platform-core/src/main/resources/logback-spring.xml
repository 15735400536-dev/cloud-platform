    <!-- 2. 文件日志配置（按大小和时间滚动） -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 当前日志文件 -->
        <file>${LOG_FILE_PATH}.log</file>

        <!-- 滚动策略：同时按大小和时间分割 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- 滚动日志文件名格式：包含日期、序号和压缩后缀 -->
            <fileNamePattern>${LOG_FILE_PATH}-%d{yyyy-MM-dd}-%i.log.gz</fileNamePattern>

            <!-- 单文件大小限制：10MB -->
            <maxFileSize>10MB</maxFileSize>

            <!-- 总保留时间：365天 -->
            <maxHistory>365</maxHistory>

            <!-- 可选：总日志大小限制（防止磁盘占满，根据需求调整） -->
            <!-- <totalSizeCap>10GB</totalSizeCap> -->
        </rollingPolicy>

        <!-- 日志格式 -->
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 3. 日志级别配置（同时输出到控制台和文件） -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/> <!-- 控制台输出（默认格式） -->
        <appender-ref ref="FILE"/> <!-- 文件输出 -->
    </root>

    <!-- 4. 自定义包日志级别（可选） -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="com.alibaba" level="WARN"/>
    <logger name="org.apache" level="WARN"/>
</configuration>